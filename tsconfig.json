{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [ "./src/**/*" ],
    "exclude": [ "node_modules" ]
}