{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "settings": {
        "react": { "version": "detect" }
    },
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [ "react" ],
    "rules": {
        "indent": [ "error", 4 ],
        "linebreak-style": [ "warn", "windows" ],
        "quotes": [ "warn", "double" ],
        "semi": [ "error", "always" ],
        "react/no-direct-mutation-state": "error"
    }
}